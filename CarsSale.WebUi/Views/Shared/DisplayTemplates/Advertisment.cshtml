@model CarsSale.DataAccess.DTO.Advertisement

<div class="col-md-6 advertisement">
	<div class="row">
		<div class="col-md-12">
			<div class="image-container">
				<h6>@Model.Vehicl.Brand.Name </h6>
				<div class="image-content">
					<img id="photo" src="@Url.Action("GetImage", "Advertisement", new {imagePath = Model.ImagePath})" class="img-fluid" alt="Responsive image">
				</div>
			</div>
		</div>	
		<hr>
		<div class="col-md-12">
			<label class="badge col-sm-5 text-left">@Model.Vehicl.TransmissionType.Name</label>
			@foreach (var fuel in Model.Vehicl.Engine.Fuels)
			{
				<span class="alert-light col-sm-12">@fuel.Name</span>
			}
			<span class="col-sm-5 text-left">@Math.Round((float)Model.Vehicl.Engine.Volume / 1000, 1) m<sup>3</sup></span>
		</div>
	</div>
</div>