@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>CarsSale</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap")

    <script src="~/Content/Scripts/cars-sale/cars-sale.js"></script>
</head>
<body>

<div class="modal col-lg-12">
    <div class="modal-content col-xs-12">
        <div class="logo"></div>
        <div class="spinner"></div>
    </div>
</div>

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            @Html.ActionLink("CarsSale", "Index", "Home", null, new {@class = "navbar-brand active"})
            @Html.ActionLink("Create Advertisement", "Create", "Advertisement", null, new {@class = "navbar-brand active"})
            @Html.ActionLink("User Registration", "Registry", "Account", null, new {@class = "navbar-brand active"})
        </div>
        <ul class="nav navbar-nav navbar-right">
            @if (string.IsNullOrEmpty(User.Identity.Name))
            {
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink("Sign Out", "LogOut", "Account")</li>
            }
        </ul>
    </div>
</nav>
<div id="wrapper">
    <div>
        <div>
            <div id="error-placement" class="alert alert-danger alert-dismissable fade in top navbar-fixed-top col-lg-3 float-right col-lg-offset-9">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong class="message"></strong>
            </div>
            @RenderBody()
        </div>
    </div>
</div>
</body>
</html>
