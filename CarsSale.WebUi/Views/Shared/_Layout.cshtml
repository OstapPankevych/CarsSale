@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>CarsSale</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            @Html.ActionLink("CarsSale", "Index", "Home", null, new {@class= "navbar-brand active" })
            @Html.ActionLink("Create", "Index", "Advertisement", null, new { @class = "navbar-brand active" })
            @Html.ActionLink("Registry", "Registry", "Account", null, new { @class = "navbar-brand active" })
        </div>
        <ul class="nav navbar-nav navbar-right">
            @if (string.IsNullOrEmpty(User.Identity.Name))
            {
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink("Sign Out", "LogOut", "Account")</li>
            }
        </ul>
    </div>
</nav>
<div>
    <div>
        <div>
            @RenderBody()
        </div>
    </div>
</div>
</body>
</html>
