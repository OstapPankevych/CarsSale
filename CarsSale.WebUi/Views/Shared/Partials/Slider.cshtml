@model IEnumerable<CarsSale.DataAccess.DTO.Advertisement>

<div id="slider" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		@for (var x = 0; x < Model.Count(); x++)
		{
			<li data-target="#slider" class="@(x==0 ? "active" : "")" data-slide-to="@x"></li>
		}
	</ol>
	<div class="carousel-inner">
		@for (var x = 0; x < Model.Count(); x++)
		{
			var adv = Model.ElementAt(x);
			<div class="item @(x==0 ? "active" : "")">
				<img src="@Url.Action("GetImage", "Advertisement", new { imagePath = Model.ElementAt(x).ImagePath })"/>
				<div class="description">
					<div class="col-sm-12">
						<label class="col-sm-6 text-left">@adv.Vehicl.Brand.Name</label>
						<label class="col-sm-6 text-right">@adv.Region.Name</label>
					</div>
					<span class="badge">@Math.Round((float) adv.Vehicl.Engine.Volume / 1000, 1)</span>
					<span class="badge">@adv.Vehicl.TransmissionType.Name</span>
					@foreach (var fuel in adv.Vehicl.Engine.Fuels)
					{
						<span class="badge">@fuel.Name</span>
					}
				</div>
			</div>
		}
	</div>
	<a class="left carousel-control" href="#slider" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#slider" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
		<span class="sr-only">Next</span>
	</a>
</div>