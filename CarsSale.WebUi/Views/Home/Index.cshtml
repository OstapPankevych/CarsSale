@model CarsSale.WebUi.Models.SearchViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<legend class="text-center">Welcome to CarsSale</legend>
<div class="col-sm-12">
    <div class="col-sm-3">
        <div class="panel panel-default">
	        <div class="panel-heading">
		        <label class="glyphicon glyphicon-eye-open"></label>
		        <span class="right">
			        Filter
		        </span>
	        </div>
			@using (Ajax.BeginForm("Search", new AjaxOptions { UpdateTargetId = "results" }))
			{
				<div class="panel-body">
					<div class="row">
						<div class="col-sm-9">
							<label class="col-sm-12 control-label">Region</label>
							<div class="col-sm-12">
							    <select class="form-control" name="@Html.NameFor(m => m.Region.Id)">
                                    <option value="-1">-- Select --</option>
							        @foreach (var x in Model.RegionOptions)
							        {
							            <option value="@x.Id">@x.Name</option>
							        }
							    </select>
							</div>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-9">
							<label class="col-sm-12 control-label">Brand</label>
							<div class="col-sm-12">
							    <select class="form-control" name="@Html.NameFor(m => m.Brand.Id)">
                                    <option value="-1">-- Select --</option>
							        @foreach (var x in Model.BrandOptions)
							        {
							            <option value="@x.Id">@x.Name</option>
							        }
							    </select>
							</div>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-9">
							<label class="col-sm-12 control-label">Vehicl Type</label>
							<div class="col-sm-12">
							    <select class="form-control" name="@Html.NameFor(m => m.VehiclType.Id)">
                                    <option value="-1">-- Select --</option>
							        @foreach (var x in Model.VehiclTypeOptions)
							        {
							            <option value="@x.Id">@x.Name</option>
							        }
							    </select>
							</div>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-9">
							<label class="col-sm-12 control-label">Transmission</label>
							<div class="col-sm-12">
							    <select class="form-control" name="@Html.NameFor(m => m.TransmissionType.Id)">
                                    <option value="-1">-- Select --</option>
							        @foreach (var x in Model.TransmissionTypeOptions)
							        {
							            <option value="@x.Id">@x.Name</option>
							        }
							    </select>
							</div>
						</div>
					</div>
					<hr>
					<div class="col-sm-12">
						<div class="col-sm-12">
							<label class="col-sm-6 control-label">Engine</label>
							<div class="col-sm-6">
								<div class="col-sm-4">From</div>
								<div class="form-group">
									@Html.TextBoxFor(x => x.EngineVolumeFrom, new {@class = "form-control"})
								</div>
								<hr>
								<div class="col-sm-4">To</div>
								<div class="form-group">
									@Html.TextBoxFor(x => x.EngineVolumeTo, new {@class = "form-control"})
								</div>
								<div class="panel panel-default col-sm-12">
									<div class="panel-body">
										@foreach (var x in Model.FuelOptions)
										{
											<div class="checkbox">
												<label>
													<input type="checkbox" value="@x.Id" name="@Html.NameFor(m => m.FuelIds)">@x.Name
												</label>
											</div>
										}
									</div>
								</div>
							</div>
						</div>
							<div class="col-sm-12">
								<div>
									@Html.ValidationMessageFor(m => m.EngineVolumeFrom)
								</div>
								<div>
									@Html.ValidationMessageFor(m => m.EngineVolumeTo)
								</div>
							</div>
					</div>
					<div class="col-sm-10">
						<label class="glyphicon glyphicon-search"></label>
						<button type="submit" class="btn btn-primary">Search</button>
					</div>
				</div>
			}
        </div>
    </div>
    <div id="results">
    </div>

    <div class="col-sm-12 text-center">
        <ul class="pagination">
            <li class="disabled"><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>       
    </div>
</div>