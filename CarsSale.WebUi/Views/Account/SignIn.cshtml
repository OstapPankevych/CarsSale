@model CarsSale.WebUi.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row justify-content-center">
	@using (Html.BeginForm("SignIn", "Account", null, FormMethod.Post, new {@class = "form-horizontal col-sm-5", role = "form", ReturnUrl = Request.QueryString["ReturnUrl"]}))
	{
		<div class="justify-content-center">
			<hr />
			<h3>Sign In to CarsSale</h3>
			<hr/>
		</div>
		<fieldset>
			<label class="has-error">
				@Html.ValidationSummary(true)
			</label>
			<div class="form-group">
				<label class="col-sm-3 control-label">Login *</label>
				<div class="col-sm-9">
					@Html.TextBoxFor(x => x.Login, new {@class = "form-control", placeholder = "Login"})
					@Html.ValidationMessageFor(x => x.Login)
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label">Password *</label>
				<div class="col-sm-9">
					@Html.PasswordFor(x => x.Password, new {@class = "form-control", id = "inputPassword", placeholder = "Password", type = "password"})
					@Html.ValidationMessageFor(x => x.Password)
					<div class="checkbox">
						<label>
							@Html.CheckBoxFor(x => x.Remember)Remember Me?
						</label>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-3 col-sm-offset-3">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
			<div class="panel panel-default col-sm-offset-3">
				<div class="panel-body text-center">
					New to CarsSale?
					@Html.ActionLink("Create an account", "Registry", "Account")
				</div>
			</div>
		</fieldset>
	}
</div>
