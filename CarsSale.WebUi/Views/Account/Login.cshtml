@model CarsSale.WebUi.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-lg-8 col-lg-offset-4">
    <div class="row clearfix center-block">
        @using (Html.BeginForm("SignIn", "Account", null, FormMethod.Post, new { @class = "form-horizontal col-sm-5", role = "form", ReturnUrl = Request.QueryString["ReturnUrl"] }))
        {
            <fieldset>
                <legend>Sign in to CarsSale</legend>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Login</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control", id = "inputEmail", placeholder = "Login" })
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Password</label>
                    <div class="col-lg-9">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "inputPassword", placeholder = "Password", type = "password" })
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(x => x.Remember)Remember Me?
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
